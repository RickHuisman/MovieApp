<resources>

    <style name="MovieAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/color_primary_light</item>

        <item name="popupMenuStyle">@style/MovieAppPopupMenu</item>
        <item name="android:buttonStyle">@style/MovieAppButton</item>
    </style>

    <style name="MovieAppToolbar">
        <item name="titleTextAppearance">@style/MovieAppToolbarTitleAppearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/toolbar</item>
    </style>

    <style name="MovieAppToolbarTitleAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:fontFamily">@font_roboto_regular</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
    </style>

    <style name="MovieAppPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/color_primary</item>
    </style>

    <style name="MovieAppPopupMenu.MoviesSort">
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>

    <style name="MovieAppSeparator">
        <item name="android:background">@color/white_opacity_05</item>
    </style>

    <style name="MovieAppSeparator.VerticalContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="MovieAppSeparator.HorizontalContent">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MovieAppPopupWindow">
        <item name="android:popupElevation">@dimen/spacing16</item>
    </style>

    <!-- Movie detail popup -->
    <style name="MovieAppMovieDetailPopupStatsContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MovieAppMovieDetailPopupStatsValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MovieAppMovieDetailPopupStatsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:layout_marginTop">@dimen/spacing4</item>
    </style>

    <style name="MovieAppButton" parent="Widget.AppCompat.Button">

    </style>

    <style name="MovieAppButton.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">

    </style>
</resources>
